<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
	<properties>
		<property name="logFileMsgPattern">%d{yyyy-MM-dd'T'HH:mm:ss.SSSZ} %p %m%n</property>
		<property name="logDir">target/test-reports/logs</property>
		<property name="date">current.date</property>
		<Property name="filename">${logDir}/all_${date:yyyy_MM_dd_HH_mm_ss}.log</Property>
		<property name="logConsoleMsgPattern">%highlight{%d{HH:mm:ss.SSS} %-5level -
			%msg%n}{FATAL=red, ERROR=red, WARN=yellow, INFO=white, DEBUG=blue,
			TRACE=magenta}</property>
	</properties>
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="${logConsoleMsgPattern}" />
		</Console>
		<File name="MyFile" fileName="${filename}"
			immediateFlush="true" append="false">
			<PatternLayout pattern="${logFileMsgPattern}" />
		</File>
	</Appenders>
	<Loggers>
		<Root level="trace">
			<AppenderRef ref="Console" level="error" />
			<AppenderRef ref="MyFile" level="debug" />
		</Root>
	</Loggers>
</Configuration>